@model Category

@section title {
    <h3>Add Category</h3>
}

<form method="post" asp-controller="categories" asp-action="add">
    @* <input type="hidden" asp-for="CategoryId" /> *@
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <span class="col" asp-validation-summary="Name"></span>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <span class="col" asp-validation-summary="Description"></span>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>